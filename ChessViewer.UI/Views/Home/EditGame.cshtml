@using ChessViewer.UI.Models
@model GameViewModel

<div class="panel panel-default panel-body" style="max-width: 500px">
    @Html.ValidationSummary()
    @using (Html.BeginForm("Save", "Home"))
    {
        <div class="form-group">
            <label>Game moves</label>
            @Html.TextAreaFor(m => m.RawMoves, new { @class = "form-control", rows = "15", cols = "15" })
        </div>
        <div class="form-group">
            <label>Save as new game</label>
            @Html.TextBoxFor(m => m.GameName, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    }
</div>
