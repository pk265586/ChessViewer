@using ChessViewer.UI.Models
@using ChessViewer.UI.Static
@model HomeViewModel

@if (Model.FormMode == HomeFormMode.Play)
{
    <div id="PlayControls">
        @Html.Partial("PlayControls", Model.CurrentGame)
    </div>
}

@if (Model.FormMode == HomeFormMode.Edit)
{
    <div id="EditControls">
        @Html.Partial("EditGame", Model.CurrentGame)
    </div>
}

@if (Model.FormMode == HomeFormMode.Select)
{
    <div id="LoadControls">
        @Html.Partial("SelectGame", Model.LoadModel)
    </div>
}
