@using ChessViewer.UI.Models
@using ChessViewer.UI.Static
@model HomeViewModel

@if (Model.FormMode == HomeFormMode.Play)
{
    @Html.Partial("PlayControls", Model.PlayGame)
}

@if (Model.FormMode == HomeFormMode.Edit)
{
    @Html.Partial("EditGame", Model.EditGame)
}

@if (Model.FormMode == HomeFormMode.Select)
{
    @Html.Partial("SelectGame", Model.SelectGame)
}
